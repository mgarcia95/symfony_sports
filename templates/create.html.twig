{% extends 'base.html.twig' %}
{% block title %} Create Event {% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <br/>
            <h2>Create Event</h2>
            <div class="row">
                <form class="col-12" action="{{ path('create_event') }}" method="post">
                    <div class="col-4 form-group my-sandbox">
                        {{ form_row(form.date.date, { attr: { 'class': 'form-control', 'placeholder': 'yyyy-mm-dd' } }) }}
                    </div>
                    <div class="col-4 form-group timepicker">
                        {{ form_row(form.date.time, { attr: { 'class': 'form-control', 'placeholder': 'yyyy-mm-dd', 'value': 'click', 'readonly': 'readonly' } }) }}
                    </div>
                    <div class="col-6 form-group">
                        {{ form_row(form.place, { attr: { 'class': 'form-control', 'placeholder': 'Choose a place' } }) }}
                    </div>
                    <div class="col-6 form-group">
                        {{ form_row(form.sport, { attr: { 'class': 'form-control', 'placeholder': 'Choose a sport' } }) }}
                    </div>
                    <div class="col-6 form-group">
                        {{ form_row(form.comments, { attr: { 'class': 'form-control', 'placeholder': 'Comments about the event or players.' } }) }}
                    </div>
                    <div class="col-lg-2 pt-3">
                        <button class="btn btn-primary" type="submit">Create!</button>
                    </div>
                    {{ form_rest(form) }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}
