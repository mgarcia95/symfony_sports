{% extends 'base.html.twig' %}

{% block title %}Registration{% endblock %}

{% block body %}

<div class="container-fluid py-3">
    <div class="row">
        <div class="col-md-4 mx-auto">
                <div class="card card-body">
                    <h3 class="text-center mb-4">Sign-up</h3>
                    <form action="{{ path('user_registration')}}" class="form-horizontal" method="post">
                        <div class="form-group">
														{{ form_row(form.username, { attr: { 'class': 'form-control input-lg', 'placeholder':'Username' } }) }}
                        </div>
                        <div class="form-group">
														{{ form_row(form.email, { attr: { 'class': 'form-control input-lg', 'placeholder':'Email Address' } }) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.plainPassword.first, { attr: { 'class': 'form-control input-lg', 'placeholder':'Password' } }) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.plainPassword.second, { attr: { 'class': 'form-control input-lg', 'placeholder':'Confirm Password' } }) }}
                        </div>
												<div class="form-group text-center">
								          {{ form_row(form.save, { attr: {'class':'btn btn-success btn-lg'}}) }}
												</div>
												<a  href="{{ path('login') }}" class="text-center new-account">Login</a>
												{{ form_rest(form) }}
										</form>
                </div>
        </div>
    </div>
</div>

{% endblock %}
