{% extends 'base.html.twig' %}

{% block body %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6 mx-auto">

                    <!-- form card login -->
                    <div class="card rounded-0">
                        <div class="card-header text-center">
                            <h3 class="mb-0">Login</h3>
                        </div>
                        <div class="card-body">
                            <form action="{{ path('login') }}" class="form-signin" method="post">
                                <div class="form-group">
                                    <label for="uname1">Username</label>
                                    <input id="username" type="text" class="form-control form-control-lg rounded-0" placeholder="Username" name="_username" value="{{ last_username }}" required autofocus>
                                    <div class="invalid-feedback">Oops, you missed this one.</div>
                                </div>
                                <div class="form-group">
                                    <label>Password</label>
                                    <input id="password" name="_password" type="password" class="form-control form-control-lg rounded-0" placeholder="Password" required>
                                    <div class="invalid-feedback">Enter your password too!</div>
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-success btn-lg " id="btnLogin">Login</button>
                                </div>
                            </form>
                            <a  href="{{ path('user_registration') }}" class="text-center new-account">Create an account </a>
                        </div>
                        <!--/card-block-->
                    </div>
                    <!-- /form card login -->

                </div>


            </div>
            <!--/row-->

        </div>
        <!--/col-->
    </div>
    <!--/row-->
</div>

{% endblock %}
